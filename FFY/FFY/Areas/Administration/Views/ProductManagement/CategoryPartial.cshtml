@using FFY.Web.Areas.Administration.Models.ProductManagement
@model CategoryPartialViewModel

<section id="category-addition-form" class="addition-form">
    @using (Html.BeginForm("addCategory", "productManagement", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    <label for="category-image" class="btn btn-default browse-image">@FFY.Web.Resources.Language.Browse</label>
                    <input type="file" id="category-image" name="file" class="form-control hidden">
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="@FFY.Web.Resources.Language.Create" class="btn btn-primary btn-block" />
                </div>
            </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}