<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Furniture For You</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Furniture For You", "index", "home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(FFY.Web.Resources.Language.Home, "index", "home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink(FFY.Web.Resources.Language.Furniture, "about", "home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink(FFY.Web.Resources.Language.Contact, "index", "contact", new { area = "" }, null)</li>
                    <li>@Html.ActionLink(FFY.Web.Resources.Language.En, ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), 
                       new { language = "en", id = ViewContext.RouteData.Values["id"] == null ? "" : ViewContext.RouteData.Values["id"].ToString() }, null)</li>
                    <li>@Html.ActionLink(FFY.Web.Resources.Language.Bg, ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), 
                       new { language = "bg", id = ViewContext.RouteData.Values["id"] == null ? "" : ViewContext.RouteData.Values["id"].ToString() }, null)</li>
                </ul>
                @Html.Partial("_AdministrationPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Telerik Academy 2016/2017 ASP.NET MVC Project</p>
        </footer>
    </div>

    @Html.Partial("SupportChatPartial");

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerysignalr")
    @Scripts.Render("~/bundles/bootstrap")
        <script type="text/javascript">
            
        </script>
        <!--Script references. -->
        <!--Reference the autogenerated SignalR hub script. -->
        <script src="~/signalr/hubs"></script>
        <!--Add script to update the page and send messages.-->
        <script type="text/javascript">
            
            $(function () {
            // Declare a proxy to reference the hub.
                var chat = $.connection.supportChatHub;

            // Create a function that the hub can call to broadcast messages.
            chat.client.addMessage = function (name, message) {
                // Html encode display name and message.
                var encodedName = $('<div />').text(name).html();
                var encodedMsg = $('<div />').text(message).html();
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + encodedName
                    + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val("@this.User.Identity.Name");
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        </script>
    @RenderSection("scripts", required: false)
</body>
</html>
